# Enable URL rewriting
RewriteEngine On

# Block access to hidden files
<Files ".*">
    Order Deny,Allow
    Deny from all
</Files>

# Custom error pages
ErrorDocument 404 /404.php

# Redirect trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Handle blog detail URLs
RewriteRule ^blog/([0-9]+)/([a-zA-Z0-9-]+)$ blog-detail.php?id=$1&slug=$2 [L]

# Handle event detail URLs
RewriteRule ^event/([0-9]+)/([a-zA-Z0-9-]+)$ event-detail.php?id=$1&slug=$2 [L]

# Handle admin URLs
RewriteRule ^admin$ admin/login.php [L]
RewriteRule ^admin/$ admin/login.php [L]
RewriteRule ^admin/dashboard$ admin/dashboard.php [L]
RewriteRule ^admin/dashboard/$ admin/dashboard.php [L]